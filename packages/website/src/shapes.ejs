<%- include('./head.ejs')-%>

<body>
    <%- include('./header.ejs')-%>
    <main>
        <h3>shapes</h3>
        <menu class="shapes-toolbar">
            <li><button type="button" class="shapes-add">add</button> </li>
        </menu>
        <form name="shape-add" method="post">
            <label for="shape-name"><input type="text" id="shape-name" /></label>
        </form>
        <form name="shapes-edit" method="put">
            <% for (let i = 0; i < shapes.length; i++) { %>
            <fieldset class="shape" id="shape-<%= shapes[i].id %>">
                <label for="shape-<%= shapes[i].id %>-checkbox">
                    <%= i %>
                    <input type="checkbox" id="shape-<%= shapes[i].id %>-checkbox" />
                </label>
                <label for="shape-<%= shapes[i].id %>-name">
                    <%= name %>
                    <input type="text" id="shape-<%= shapes[i].id %>-name" value="<%= shapes[i].name %>" />
                </label>
                <menu class="shape-toolbar">
                    <li><button class="shape-edit" type="button">edit</button></li>
                </menu>
                <strong class="shape-state <%= Object.keys(states).at(shapes.state) %>">
                    <%= Object.keys(states).at(shapes.state) %>
                </strong>
            </fieldset>
            <% } %>
        </form>
    </main>
    <%- include('./footer.ejs')-%>
</body>
