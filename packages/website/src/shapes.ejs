<!--
     Data dependency:
     {
     shapes: [ { id, name, state, }..., ]
     }
-->

<%- include('./head.ejs')-%>

<body>
    <%- include('./header.ejs')-%>
    <main>
        <h3>shapes</h3>
        <menu class="shapes-toolbar">
            <li><button type="button" id="show-shape-add">add</button> </li>
            <li><button type="button" id="shape-delete">delete</button></li>
        </menu>
        <form id="form-shape-add" name="form-shape-add">
            <label for="shape-name"> shape name </label>
            <input type="text" name="name" id="shape-name" value="" />
            <button type="button" id="shape-add">submit</button>
        </form>
        <% for (let i = 0; i < shapes.length; i++) { %>
        <form data-id="<%= shapes[i].id %>" id="form-shape-<%= i %>" name="form-shape-<%= i %>" class="shape">
            <label class="shape-index">
                <input type="number" name="index" value="<%= i %>" />
            </label>
            <label class="shape-name">
                <input type="text" name="name" value="<%= shapes[i].name %>" />
            </label>
            <menu class="shape-toolbar">
                <li><button type="button" class="shape-edit">edit</button></li>
            </menu>
        </form>
        <% } %>
    </main>
    <dialog>
    </dialog>
    <%- include('./footer.ejs')-%>
</body>
