<%- include('./head.ejs')-%>

<body>
    <%- include('./header.ejs')-%>
    <main>
        <h3>shapes</h3>
        <menu class="shapes-toolbar">
            <li><button type="button">add</button> </li>
            <li><button type="button">delete</button></li>
        </menu>
        <form id="form-shape-add" name="form-shape-add">
            <label for="shape-name"> shape name </label>
            <input type="text" name="name" id="shape-name" />
            <button type="button" class="shape-add">submit</button>
        </form>
        <% for (let i = 0; i < shapes.length; i++) { %>
        <form id="form-shape-<%= shapes[i].id %>" name="shape-<%= shapes[i].id %>" class="shape">
            <label for="shape-<%= shapes[i].id %>-checkbox">
                <%= i %>
                <input type="checkbox" name="index" id="shape-<%= shapes[i].id %>-checkbox" />
            </label>
            <label for="shape-<%= shapes[i].id %>-name">
                <input type="text" name="name" id="shape-<%= shapes[i].id %>-name" value="<%= shapes[i].name %>" />
            </label>
            <menu class="shape-toolbar">
                <li><button type="button" class="shape-edit">edit</button></li>
            </menu>
            <strong class="shape-state <%= Object.keys(states).at(shapes.state) %>">
                <%= Object.keys(states).at(shapes.state) %>
            </strong>
        </form>
        <% } %>
    </main>
    <%- include('./footer.ejs')-%>
</body>
