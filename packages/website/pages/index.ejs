<!--
     Data dependency:
     {
       shapes: [ { id, name }..., ]
     }
-->

<%- include('./head.ejs') -%>

<body>
    <%- include('./header.ejs') -%>
    <main>
        <h3>find optimal blueprint</h3>
        <form id="form-optimal-blueprints" name="optimal-blueprints">
            <div class="shapes">
                <fieldset class="shape">
                    <select class="select-shape" name="select-shape">
                        <option value="">select shape</option>
                        <% for (let i = 0; i < shapes.length; i++) { %>
                        <option value="<%= shapes[i].id %>"><%= shapes[i].name %></option>
                        <% } %>
                    </select>
                    <label class="input-count">
                        <input type="number" value="1" />
                    </label>
                    <button class="remove-shape" type="button" value="remove">remove</button>
                </fieldset>
                <button id="add-shape" type="button" value="add">add</button>
            </div>
            <button type="submit" value="submit">find optimal blueprints</button>
        </form>
        <ul class="list-optimal-blueprint" >
        </ul>
    </main>
    <%- include('./footer.ejs') -%>
    <script defer type="module" src="/home.js"></script>
</body>
